<?xml version="1.0" encoding="UTF-8"?>

<domain>
	<!-- simple test for google calendar interface -->
	 
	<initialstate>
		
		<!-- Starting prompt -->
		<variable id="u_m">
			<value>Do you have any new plans?</value>
		</variable>
		
		<!-- We start the dialogue by asking for the destination -->
		<variable id="current_step">
			<value>Event</value>
		</variable>

	</initialstate>

        <!-- Natural language understanding models -->
        <!-- Our NLU will also be piped in from a SEMAFOR based server
             or via a SEMAFOR based module -->
	<import href="gcal-events_nlu.xml"/>

	<!--  Dialogue management models (action selection and transition) -->
	<import href="gcal-events_dm.xml"/>

	<!-- Natural language generation models -->
	<import href="gcal-events_nlg.xml"/>


	<!-- External module showing how to interface the dialogue system with an external 
	database (used here to find the ticket prices and "book" the tickets) -->
	<settings>
            <modules>jarvis.modules.gcal.CalendarUpdate</modules>

            <!-- we may use the following for NLU -->
            <!--<modules>opendial.modules.parsing.Semafor</modules>-->
	</settings>
</domain>
