				</effect>
				<effect prob="0.1">
					<set var="Person^p" value="Moss" />
				</effect>
				<effect prob="0.1">
					<set var="Person^p" value="Sandefjord" />
				</effect>
				<effect prob="0.05">
					<set var="Person^p" value="Tromsø" />
				</effect>
				<effect prob="0.05">
					<set var="Person^p" value="Bodø" />
