<?xml version="1.0" encoding="UTF-8"?>

<!--
	Basic EventTypes: 
	
	anniversary
	birthday
	chill
	graduation
	job
	party
	seminar
	dp: job interview ?
	dp: conference, meeting/meetup, date(two meanings),
		go-for-a-X, ...
	dp: extending from event to activity:
		walk, shower, excercise, call, talk, ...
-->



<domain>
	<model trigger="frame_u">
            <rule>
                      
			<!-- Handle known event types (simple & compound): -->
                        <case>
                                <condition>
		    	    	        <if var="frame_u" value="(*#{X} anniversary)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,anniversary)" />
				</effect>
			</case>


			<case>
				<condition>
					<if var="frame_u" value="(*#{X} birthday)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,birthday)" />
				</effect>
			</case>
			

			<case>
				<condition>
					<if var="frame_u" value="(*#{X} chill)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,chill)" />
				</effect>
			</case>
		

			<case>
				<condition>
					<if var="frame_u" value="(*#{X} graduation)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,graduation)" />
				</effect>
			</case>
	

			<case>
				<condition>
					<if var="frame_u" value="(*#{X} job)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,job)" />
				</effect>
			</case>

			<case>
				<condition>
					<if var="frame_u" value="(*#{X} party)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,party)" />
				</effect>
			</case>


			<case>
				<condition>
					<if var="frame_u" value="(*#{X} seminar)" />
				</condition>
				<effect>
					<set var="a1_u" value="(Type,{X})" />
					<set var="a2_u" value="(EventType,seminar)" />
				</effect>
			</case>
		
                    </rule>
                    <rule priority="2">
                        <!-- Handle unknown event types (simple & compound): -->
                        <case>
                                <condition>
                                        <if var="frame_u" value="(*#{X})" />	
                                </condition>
                                <effect>
                                        <set var="a2_u" value="(EventType,{X})" />
                                </effect>
                        </case>

                </rule>
	</model>
</domain>
